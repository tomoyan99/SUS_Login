{
  "name": "sus_login",
  "version": "4.6.0",
  "description": "",
  "main": "src/boot/electron_boot.cjs",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -m",
    "upd": "ncu -u && npm i",
    "build": "electron-builder --win --x64 --dir",
    "build_installer": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps --platform win32 --arch x64"
  },
  "author": "Tomoya Sano",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "nexe": "^1.1.6",
    "node-pty": "^1.0.0",
    "puppeteer": "^21.5.2",
    "puppeteer-cluster": "^0.23.0",
    "rcedit": "^4.0.1",
    "readline-promises": "^1.3.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "electron-packager": "^17.1.2",
    "node": "^21.1.0"
  },
  "type": "module",
  "homepage": "./",
  "build": {
    "productName": "%npm_package_version%",
    "appId": "com.electron.SUS_Login",
    "directories": {
      "output": "build/dist"
    },
    "files": [
      "src",
      "package.json"
    ],
    "win": {
      "icon": "src/assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
