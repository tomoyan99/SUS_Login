{
  "name": "sus_login",
  "version": "5.0.0",
  "description": "",
  "main": "src/boot/electron_boot.cjs",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -m",
    "upd": "ncu -u && npm i",
    "build": "electron-builder --win --x64 --dir",
    "build_installer": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps --platform win32 --arch x64",
    "webpkg": "webpack --mode production ",
    "webdir": "webpack --mode development ",
    "nexepkg": "node nexe_complie.js"
  },
  "author": "Tomoya Sano",
  "license": "ISC",
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@liveconfig/xterm-webfont": "^2.1.0",
    "bcrypt": "^5.1.1",
    "enquirer": "^2.4.1",
    "inquirer": "^9.2.12",
    "neo-blessed": "^0.2.0",
    "neo-blessed-contrib": "^4.9.0",
    "nexe": "^1.1.6",
    "node-pty": "^1.0.0",
    "puppeteer-cluster": "^0.23.0",
    "puppeteer-core": "^21.6.0",
    "rcedit": "^4.0.1",
    "readline-promises": "^1.3.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "node": "^21.1.0"
  },
  "type": "module",
  "homepage": "./",
  "build": {
    "productName": "SUS_Login_v5.0.0",
    "appId": "com.electron.SUS_Login",
    "directories": {
      "output": "build/dist"
    },
    "files": [
      "src/boot/**/*",
      "package.json"
    ],
    "extraResources": [
      "src/terminal_processes/**/*"
    ],
    "win": {
      "icon": "src/assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
