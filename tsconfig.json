{
  "compilerOptions": {
    // TSはECMAScript 5に変換
    "target": "ES2022",
    "module": "CommonJS",
    // 厳密モードとして設定
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",         // デフォルトではここだけ読む.忘れず書き添える
      "SUS_Login_core/src/@types"
      // ここを読むように変更
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./SUS_Login_core/src",
    "@types/index.d.ts"
  ]
}