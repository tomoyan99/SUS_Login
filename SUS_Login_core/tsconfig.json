{
  "compilerOptions": {
    // TSはECMAScript 5に変換
    "target": "ES2022",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2022",
    // 厳密モードとして設定
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021",
      "dom"
    ],
    "sourceMap": true,
  },
  "include": [
    "../src", "@types/index.d.ts"],
}