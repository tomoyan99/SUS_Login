{
  "compilerOptions": {
    // TSはECMAScript 5に変換
    "target": "ES2022",
    "module": "CommonJS",
    // 厳密モードとして設定
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021",
      "dom"
    ],
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",         // デフォルトではここだけ読む.忘れず書き添える
      "src/@types" // ここを読むように変更
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "@types/index.d.ts",
  ],
}